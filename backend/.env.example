# LifeSync Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Port (Render will provide this automatically)
PORT=3001

# MongoDB Connection String (use MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lifesync?retryWrites=true&w=majority

# JWT Secret Key (use a secure random string in production)
JWT_SECRET=your-secure-jwt-secret-key

# CORS Origin (optional - defaults to * for all origins)
# For production, set this to your frontend URL
CORS_ORIGIN=*
